{
  "manifest_version": 3,
  "name": "ジョブカンお知らせ",
  "description": "ジョブカンのお知らせをします",
  "version": "0.3.0",
  "permissions": ["alarms", "storage", "tabs", "scripting", "management", "notifications"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "options_page": "options.html",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon_128.png"
  },
  "background": {
    "service_worker": "app.js",
    "type": "module"
  }
}
