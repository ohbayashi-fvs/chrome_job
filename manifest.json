{
  "manifest_version": 3,
  "name": "ジョブカンお知らせ(非公式)",
  "description": "時間になると勤怠のお知らせをします。",
  "version": "0.4.0",
  "permissions": ["alarms", "storage", "tabs", "scripting", "notifications"],
  "host_permissions": ["https://*.jobcan.jp/*"],
  "options_page": "options.html",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon_128.png"
  },
  "background": {
    "service_worker": "app.js",
    "type": "module"
  }
}
